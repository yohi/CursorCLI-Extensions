# SuperCursor Framework - テスト環境変数

# Node環境
NODE_ENV=test

# データベース設定
DATABASE_PATH=:memory:

# ログ設定
LOG_LEVEL=error

# フレームワーク設定
ENABLE_CACHING=false
ENABLE_METRICS=true

# ペルソナ設定
PERSONA_ENABLE_LEARNING=false
PERSONA_ENABLE_CACHING=false
MAX_ACTIVE_PERSONAS=3

# コマンド設定
COMMAND_ENABLE_VALIDATION=true
COMMAND_ENABLE_CACHING=false
COMMAND_DEFAULT_TIMEOUT=5000
MAX_CONCURRENT_COMMANDS=5

# 統合設定
CURSOR_API_ENABLED=false
ENABLE_FILE_WATCHING=false
MAX_FILE_SIZE=1048576

# セキュリティ設定（テスト時は緩い設定）
ALLOWED_PATHS=/tmp,/test
DENIED_PATHS=/etc,/usr

# パフォーマンス設定
MAX_FILE_WATCHERS=10
CURSOR_TIMEOUT=5000
CURSOR_RETRY_ATTEMPTS=1